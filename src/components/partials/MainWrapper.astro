---
import Footer from "./Footer.astro";
import Header from "./Header.astro";

export interface Props {
  max_w?: string;
  px?: string;
  mx?: string;
}

const { max_w, px = "5", mx = "auto" } = Astro.props;
---

<main class="min-h-screen flex flex-col gap-12">
  <Header max_w={max_w} />
  <div
    class:list={`container px-${px} mx-${mx} ${max_w ? max_w : "max-w-full"}`}
  >
    <slot />
  </div>
  <Footer max_w={max_w} />
</main>
