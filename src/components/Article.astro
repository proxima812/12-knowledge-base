---
import { Image } from "astro:assets"
const {
  data: { title, description, tags, image },
  slug,
  index,
  favorite,
} = Astro.props;

import { slugify } from "@utils/slugify"
---

<article
  class:list={favorite
    ? "flex flex-col justify-between gap-4 p-6 rounded-lg glass ring-1 ring-green-100"
    : `glass relative ${
        (index + 1) % 3 === 0 ? "flex flex-row" : "flex flex-col"
      } justify-between gap-4 p-6 rounded-lg  ${
        (index + 1) % 3 === 0
          ? "  md:col-span-2 bg-gradient-to-br from-zinc-950 to-neutral-950"
          : ""
      }`}
>
  {
    (index + 1) % 3 === 0
      ? image && (
          <Image
            class="hidden md:block cover rounded-md"
            src={image}
            width="420"
            height="300"
            format="avif"
            quality={"mid"}
            alt={"–ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –ø–æ—Å—Ç–∞ " + title}
          />
        )
      : null
  }

  {
    (index + 1) % 3 === 0 ? (
      <>
        <div class="flex flex-col gap-4">
          <h3
            aria-label={title}
            class="pr-3 text-lg hover:underline underline-offset-4 font-bold leading-snug line-clamp-2"
          >
            <a data-saveid={`/posts/${slug}/`} href={`/posts/${slug}/`}>
              {title}
            </a>
          </h3>
          <p
            class={`line-clamp-3 group-hover:text-green-100 leading-relaxed text-gray-400`}
          >
            {description}
          </p>
          <nav class="flex flex-wrap gap-3">
            {tags.map((tag) => {
              let tagClass = tag;

              if (tag === "12 —à–∞–≥–æ–≤") {
                tagClass = "shagov-12";
              }
              if (tag === "12 —Ç—Ä–∞–¥–∏—Ü–∏–π") {
                tagClass = "tra-12";
              }
              return (
                <span
                  class={`before:absolute before:left-2 relative pl-6 block text-xs font-medium px-2 py-1 rounded-md ring-current ring-1 ${slugify(
                    tagClass,
                  )}`}
                >
                  {tag}
                </span>
              );
            })}
          </nav>
        </div>
      </>
    ) : (
      <>
        {favorite ? (
          <div class="solid border-b-[1px] border-l-[1px] border-green-100 rounded-bl-lg bg-gradient-to-r from-green-400/20 to-green-500/30 px-5 py-2 absolute top-0 right-0">
            <span class="font-medium text-sm">‚óè –ó–∞–∫—Ä–µ–ø–ª–µ–Ω–Ω–æ–µ</span>
          </div>
          <div class="absolute top-3 left-5"><span class="text-2xl">üíØ</span></div>
        ) : null}
        <h3
          aria-label={title}
          class={`${
            favorite ? "mt-9" : ""
          } pr-3 text-lg hover:underline underline-offset-4 font-bold leading-snug line-clamp-2`}
        >
          <a data-saveid={`/posts/${slug}/`} href={`/posts/${slug}/`}>
            {title}
          </a>
        </h3>
        <p
          class={`${
            favorite
              ? "text-gray-200"
              : "line-clamp-3 group-hover:text-green-100 leading-relaxed text-gray-400"
          }`}
        >
          {description}
        </p>
        <nav class="flex flex-wrap gap-3">
          {tags.map((tag) => {
            let tagClass = tag;

            if (tag === "12 —à–∞–≥–æ–≤") {
              tagClass = "shagov-12";
            }
            if (tag === "12 —Ç—Ä–∞–¥–∏—Ü–∏–π") {
              tagClass = "tra-12";
            }
            return (
              <span
                class={`before:absolute before:left-2 relative pl-6  block text-xs font-medium px-2 py-1 rounded-md ring-current ring-1 ${slugify(
                  tagClass,
                )}`}
              >
                {tag}
              </span>
            );
          })}
        </nav>
      </>
    )
  }

  {
    favorite ?? (
      <button
        class="z-10 absolute top-4 right-4"
        aria-label={title}
        data-saveid={`/posts/${slug}/`}
        aria-pressed="false"
      >
        {""}
      </button>
    )
  }
</article>
