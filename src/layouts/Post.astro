---
import Head from "@components/Head.astro"
import Footer from "@components/partials/Footer.astro"
import Header from "@components/partials/Header.astro"
import "@styles/global.css"
import { ViewTransitions } from 'astro:transitions'
const { data, image } = Astro.props;
const { title, description } = data;
---

<html lang="ru" class="scroll-smooth">
  <head>
    <Head
    title={title}
    description={description}
    ogImage={image}
    articleDate="article"
    />
    <ViewTransitions />
  </head>
  <body class="antialiased bg-[#0f1017] text-white">
    <Header />
    <main class="max-w-5xl px-5 mx-auto">
      <slot />
    </main>
    <Footer />
  </body>
</html>
