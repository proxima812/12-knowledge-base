---
import Head from "@components/Head.astro";
import ToUp from "@components/ToUp.astro";
import Wrapper from "@components/partials/MainWrapper.astro";
import "@styles/base.css";
import { ViewTransitions } from "astro:transitions";
const { title, description, image, articleDate, max_w } = Astro.props;
---

<html lang="ru" class="scroll-smooth bg-white">
  <head>
    <Head
      title={title}
      description={description}
      ogImage={image}
      articleDate={articleDate}
    />
    <ViewTransitions fallback="swap" />
  </head>
  <body>
    <Wrapper max_w={max_w}>
      <slot />
    </Wrapper>
    <ToUp />
  </body>
</html>
