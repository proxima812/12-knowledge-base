---
import Head from "@components/Head.astro";
import ToUp from "@components/ToUp.astro";
import Footer from "@components/partials/Footer.astro";
import Header from "@components/partials/Header.astro";
import "@styles/global.css";
import { ViewTransitions } from "astro:transitions";
import Container from "./Container.astro";
const { title, description, image, articleDate, w_container } = Astro.props;
---

<html lang="ru" class="scroll-smooth">
  <head>
    <Head
      title={title}
      description={description}
      ogImage={image}
      articleDate={articleDate}
    />
    <ViewTransitions />
  </head>
  <body class="antialiased bg-[#0f1017] text-white">
    <ToUp />
    <div class="flex flex-col gap-12">
      <Header />
      <Container w_container={w_container} className="content">
        <slot />
      </Container>
      <Footer />

      <style is:global>
        .content {
          min-height: calc(100vh - 235px);
        }
      </style>
    </div>
  </body>
</html>
