---
export interface Props {
  className?: string;
  color1?: string;
  color2?: string;
}
const { className, color1 = "#333", color2 = "#444" } = Astro.props;
---

<div class={` w-auto ${className}`}>
  <slot />
  <style scoped define:vars={{ color1, color2 }}>
    :root {
      --color1: color1;
      --color1: color1;
    }
    div:before {
      position: absolute;
      z-index: -1;
      content: "";
      top: 0%;
      bottom: 10%;
      width: 100%;
      height: 100%;
      left: 0;
      background: linear-gradient(85deg, var(--color1) 0%, var(--color2) 100%);
      -webkit-mask-image: radial-gradient(rgba(0, 0, 0, 0.45), transparent 70%);
      mask-image: radial-gradient(rgba(0, 0, 0, 0.45), transparent 70%);
    }
  </style>
</div>
