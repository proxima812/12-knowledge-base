---
const response = await fetch(
  "https://opensheet.elk.sh/1JOALLjnvKx8abLu7O1eoB6lJrMDx4xzBUY72up2UoJE/12steps",
);
const data = await response.json();

const default_style =
  "leading-tight  rounded-md px-3 py-2 empty:px-0 empty:py-0 empty:m-0 empty:bg-transparent";

const spheres_of_life = `font-bold  ${default_style} bg-blue-500 `;
const community = ` ${default_style} bg-red-500 `;
const community_and_abbreviation = ` ${default_style} bg-pink-500 `;
const object_independency = ` ${default_style} bg-indigo-500 `;
const decoding = ` ${default_style} bg-purple-500 `;
const off_site_link = ` ${default_style} bg-green-500 underline underline-offset-4`;

const h3 = 'text-sm font-normal text-black inline p-1 rounded-md'
---

<html lang="ru" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />
    <meta name="robots" content="noindex">
  </head>
  <body class="antialiased bg-[#0f1017] text-white">
    <section class="p-5 max-w-full">

      <div
        aria-label="Столбцы"
        class="grid gap-4 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 xl:grid-cols-6"
      >
      {
        data.map((item) => (
            <span class={spheres_of_life}>
              {item.spheres_of_life && item.spheres_of_life}
            </span>
            <span class={community}>{item.community && item.community}</span>
            <span class={community_and_abbreviation}>
              {item.community_and_abbreviation &&
                item.community_and_abbreviation}
            </span>
            <span class={object_independency}>
              {item.object_independency && item.object_independency}
            </span>
            <span class={decoding}>{item.decoding && item.decoding}</span>
            <a href={item.off_site_link} class={off_site_link}>
              {item.off_site_link && item.off_site_link}
            </a>
            ))
          }
          </div>
    </section>
  </body>
</html>
